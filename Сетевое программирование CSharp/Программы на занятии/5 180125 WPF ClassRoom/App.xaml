<Application x:Class="ClassRoom.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:ClassRoom.Views"
             StartupUri="/Window/MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <BitmapImage x:Key="Image"
                          UriSource="pack://application:,,,/Assets/background.jpg"/>
             
             <ImageBrush x:Key="AboutBackground"
                         ImageSource="{StaticResource Image}"/>
             
             <view:MainPageView x:Key="MainPageView"/>
             <view:AboutPageView x:Key="AboutPageView"/>
         </ResourceDictionary>
    </Application.Resources>
</Application>
